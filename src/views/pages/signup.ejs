<%- include('../partials/header') %>
    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-72 sm:max-w-sm">
          <img class="mx-auto h-36 w-auto" src="/assets/coffee.svg" alt="Your Company">
          <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-amber-900">KAФE</h2>
        </div>
      
        <div class="mt-6 sm:mx-auto sm:w-72 sm:max-w-sm">

          <form class="space-y-6" action="http://localhost:3000/users/signup" method="POST">
            <div>
              <label for="email" class="block text-sm font-medium leading-6 text-amber-900">Email :</label>
              <div class="mt-2">
                <input id="email" name="email" type="email" autocomplete="email" required class="p-4 pl-2 block w-72 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-amber-600 sm:text-sm sm:leading-6">
              </div>
            </div>

            <div>
              <label for="username" class="block text-sm font-medium leading-6 text-amber-900">Username :</label>
              <div class="mt-2">
                <input id="username" name="username" type="text" autocomplete="username" required class="p-4 pl-2 block w-72 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-amber-600 sm:text-sm sm:leading-6">
              </div>
            </div>
      
            <div>
              <div class="flex items-center justify-between mt-6">
                <label for="password" class="block text-sm font-medium leading-6 text-amber-900">Mot de passe :</label>
              </div>
              <div class="mt-2">
                <input id="password" name="password" type="password" autocomplete="current-password" required class="p-4 pl-2 block w-72 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-amber-600 sm:text-sm sm:leading-6">
              </div>
              <!-- <div class="flex items-center justify-between mt-6 ">
                <label for="password-confirm" class="block text-sm font-medium leading-6 text-gray-900">Confirmation du mot de passe :</label>
              </div>
              <div class="mt-2">
                <input id="password-confirm" name="password-confirm" type="password" autocomplete="current-password" required class="block w-72 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-amber-600 sm:text-sm sm:leading-6">
              </div> -->
            </div>
      
            <div>
              <button type="submit" class="flex w-72 justify-center rounded-md bg-amber-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-amber-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-amber-600">Login</button>
            </div>
          </form>
      
          <p class="mt-8 text-center text-sm text-gray-500">
            Déjà inscrit ?
            <a href="./login.html" class="font-semibold leading-6 text-amber-600 hover:text-amber-500">Login ici !</a>
          </p>
        </div>
      </div>
  </body>
</html>